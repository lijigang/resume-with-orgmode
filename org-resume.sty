%% Document header
\newcommand{\resheader}[6]{
    \begin{tabular*}{\textwidth}{l@{\extracolsep{\fill}}cr}
     & \textbf{\LARGE #1} & \\
     #3  & \url{#2}           & #4  \\
    \end{tabular*}
    \\
    \vspace{0.1in}
}

