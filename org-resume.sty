%% Section Headings, etc.
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\renewcommand{\section}[1]{
  \@startsection{section}{1}{0pt}{5pt}{0pt}{\normalfont}*{}
  {
    \large \colorbox{mygrey}{
      \begin{minipage}
        {\textwidth-0.175in}
        {\textbf{#1 \vphantom{p\^{E}}}}
        %% 如果想要标题下面有条横线，可以把下面这行取消注释
        %%\hrule
      \end{minipage}
    }
  }
}

\titleformat{\subsection} %command
            [block] %shape
            {} %format
            {} %label
            {0pt} %sep
            {} %before-code
            [] %after-code

\titlespacing{\subsection}{0pt}{3pt}{0pt}[{0pt}]

\titleformat{\subsubsection} %command
            [block] %shape
            {\vspace{-2.4ex}\small\it\raggedleft} %format
            {} %label
            {0pt} %sep
            {} %before-code
            [] %after-code
\titlespacing{\subsubsection}{0pt}{0pt}{0pt}[{0pt}]
